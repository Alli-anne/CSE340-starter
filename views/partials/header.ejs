<header id="top-header">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
<% if (!locals.loggedin) { %>
        <!-- Not logged in - show My Account and Login -->
        <a href="/account/login" class="account-link">My Account</a>
      <% } else { %>
        <!-- Logged in - show Welcome link and Logout -->
        <a href="/account/" class="welcome-link">Welcome <%= locals.accountData.account_firstname || 'User' %></a>
        <a href="/account/logout" class="logout-link">Logout</a>
      <% } %>    </div>
</header>
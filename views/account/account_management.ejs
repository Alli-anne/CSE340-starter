
<h1 id="pageTitle"><%= title %></h1>

<% if (messages.error) { %>
  <p id="messageError" class="message error"><%= messages.error %></p>
<% } %>
<% if (messages.success) { %>
  <p id="messageSuccess" class="message success"><%= messages.success %></p>
<% } %>

<h2 id="welcomeMsg">Welcome, <span id="userFirstName"><%= firstName %></span></h2>

<div id="accountContainer" class="account-container">
  <!-- Update Account Info link -->
  <p><a id="updateAccountLink" href="/account/update/<%= accountId %>">Update Account Information</a></p>

  <% if (accountType === "Employee" || accountType === "Admin") { %>
    <section id="inventorySection" class="inventory-management">
      <h2>Inventory Management</h2>
      <p><a id="inventoryLink" href="/inv">Access the Inventory Management view</a></p>
    </section>
  <% } %>
</div>

